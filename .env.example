# ===========================================
# CONFIGURACIÓN DE PUERTOS
# ===========================================
# Puertos externos (host) - Cambiar si están ocupados
MONGODB_PORT=27017
BACKEND_PORT=8000
FRONTEND_PORT=4200
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ===========================================
# MONGODB CONFIGURATION
# ===========================================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=change_this_password_in_production
MONGODB_DATABASE=drtc_db

# ===========================================
# BACKEND CONFIGURATION
# ===========================================
SECRET_KEY=change_this_secret_key_in_production_use_long_random_string
ENVIRONMENT=development
DEBUG=true
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:80

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
API_URL=http://localhost:8000
PRODUCTION=false

# ===========================================
# NGINX CONFIGURATION
# ===========================================
NGINX_BACKEND_HOST=backend
NGINX_BACKEND_PORT=8000
NGINX_FRONTEND_HOST=frontend
NGINX_FRONTEND_PORT=4200

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# Usar 'production' en servidor de producción
DEPLOY_ENV=development
